package StenSaxPåse;

import java.util.Scanner;

public class StenSaxPåse {


    static int dator, spelare, mode, datorvinster=0, spelarevinster=0, oavgjort=0;
    static String[] val = {"Sten", "Sax", "Påse"};
    static String modstring;
    static boolean exit = false, modifier;
    
    static void sleeptime(int sleepseconds){
        try {
            Thread.sleep(sleepseconds);
        } catch(InterruptedException ex) {
            Thread.currentThread().interrupt();
        }
    }
    
        static void game(){
        dator = 0 + (int)(Math.random() * 3);
        input(2);
        System.out.println(" Du valde : "+ val[spelare]);
        System.out.println(" Datorn valde : "+ val[dator]);
        if (modifier == false){
            modstring = "";
        }else{
            modstring = "Matchen";
        }
        
        if(spelare == 2 && dator == 0){
            System.out.println(" Du vann " + modstring);
            spelarevinster++;
        }else if (spelare == 0 && dator == 2){
            System.out.println(" Du förlorade " + modstring);
            datorvinster++;
        }
        else if (spelare == dator)
        {
            System.out.println("   " + modstring + " Blev oavgjort");
            oavgjort++;
        }else if(spelare == dator-1)
        {
            System.out.println(" Du vann " + modstring);
            spelarevinster++;
        }else
        {
            System.out.println(" Du förlorade " + modstring);
            datorvinster++;
        }
    }
    
    static void input(int mod){
        if (mod==1){
            System.out.print("Välj en alternativ:   0 = En gång. 1 = Bäst av tre. 5 = Stäng av spelet : ");
        }else if (mod==2){
            System.out.print("Välj: 1 = Sten, 2 = Sax, 3 = Påse : ");
        }
        
        Scanner scan = new Scanner(System.in);   
        while(!scan.hasNextInt()) {
        System.out.print("Ange ett nummer enligt nedan: ");
        scan.next();
        }
        
        if (mod==1){
            mode = scan.nextInt();
        }else if (mod==2){
            spelare = scan.nextInt();
            spelare--;
        }
    }
    public static void main(String[] args) {
        while (exit != true){
            input(1);
            switch (mode) {
                case 0:
                    once();
                    break;
                case 1:
                    bestofthree();
                    break;
                case 5:
                    exit = true;
                default:
                    break;
            }
        }
        System.out.println("Tack för att du spelade");
        System.exit(0);
    }
    
    static void bestofthree(){
        modifier = false;
        spelarevinster =0; datorvinster=0; oavgjort=0;
        for (int i=0;i<3;i++){
            if (i==2){
                if (spelarevinster==2){
                    break;
                }else if (datorvinster==2){
                    break;
                }
            }
        game();
        }
                if (spelarevinster > datorvinster){
                    System.out.println(" Du vann matchen bäst av tre");
                }else if (spelarevinster < datorvinster){
                    System.out.println(" ");
                }else{
                    System.out.println(" Det blev oavgjort");
                }
        }
    
    static void once(){
        modifier = true;
        game();
    }
}
